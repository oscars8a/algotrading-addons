<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="portfolio_portfolio_view_form" model="ir.ui.view">
        <field name="model">portfolio.portfolio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="lines" nolabel="1">
                            <tree>
                                <field name="exchange_id"/>
                                <field name="f_product_id"/>
                                <field name="qty"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="portfolio_portfolio_action" model="ir.actions.act_window">
        <field name="name">Portfolios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">portfolio.portfolio</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
    <menuitem id="portfolio_portfolio_menu"
        parent="portfolio_portfolio_menu_categ" action="portfolio_portfolio_action" sequence="1"/>
</odoo>
